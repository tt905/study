<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/speed_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_close_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dip"
        android:background="@drawable/big_x"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/group_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/speed_level00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/slow_selector"
            />

        <RadioButton
            android:id="@+id/speed_level01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/speedMarginLeft"
            android:button="@drawable/speed_selector"
            />

        <RadioButton
            android:id="@+id/speed_level02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/speedMarginLeft"
            android:button="@drawable/speed_selector"
            />

        <RadioButton
            android:id="@+id/speed_level03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/speedMarginLeft"
            android:button="@drawable/mid_selector"
            />

        <RadioButton
            android:id="@+id/speed_level04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/speedMarginLeft"
            android:button="@drawable/speed_selector"
            />

        <RadioButton
            android:id="@+id/speed_level05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/speedMarginLeft"
            android:button="@drawable/speed_selector"
            />

        <RadioButton
            android:id="@+id/speed_level06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/speedMarginLeft"
            android:button="@drawable/fast_selector"
            />

    </RadioGroup>
</LinearLayout>
