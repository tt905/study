<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="line线"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="卡片式Layout"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="loading"/>
            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="协调view"/>
            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="scroller滑动"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="volley"/>
            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ConstraintLayout用法研究"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="快捷方式"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn020"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="万能适配器"/>
            <Button
                android:id="@+id/btn021"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dialog对话框"/>

            <Button
                android:id="@+id/btn022"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="spinner测试"/>

            <Button
                android:id="@+id/btn023"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bitmap研究"/>

            <Button
                android:id="@+id/btn024"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="popupwindow7.0"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
